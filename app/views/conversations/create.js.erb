var conversations = $('#conversations-list');
conversations.html("");
conversations.append("<%= j(render 'conversations/conversation', conversation: @conversation, user: current_user) %>");
conversation = conversations.find("[data-conversation='" + "<%= @conversation.id %>" + "']");

conversation.find('.panel-body').show();
var messages_list = conversation.parent();
var height = messages_list.height();
messages_list.animate({scrollTop: messages_list[0].scrollHeight}, 2000);

