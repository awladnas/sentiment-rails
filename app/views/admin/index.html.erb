<div class="row login-view">
  <div class="col-md-9 col-md-offset-3">
    <%= form_tag check_sentiments_admin_index_path, class: "form-inline", method: :get, remote: true do |f| %>
        <div class="form-group">
          <label for="email">User:</label>
          <%= select_tag :user, options_from_collection_for_select(User.all, "id", "user_name") %>
        </div>
        <div class="form-group">
          <label for="email">Start:</label>
          <%= text_field_tag :start_date, nil, class: "form-control" %>
        </div>
        <div class="form-group">
          <label for="email">End:</label>
          <%= text_field_tag :end_date, nil, class: "form-control" %>
        </div>
        <button type="submit" class="btn btn-default">Submit</button>
    <% end %>
  </div>
</div>

<div class="container">
  <div id="result">

  </div>
</div>

<script type="text/javascript">
  $(function () {
    $('#start_date, #end_date').datepicker();
  });
</script>
