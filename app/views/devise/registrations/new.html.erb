<div class="container login-view">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <div class="panel panel-login">
        <div class="panel-heading">
          <div class="row">
            <div class="col-xs-6">
              <%= link_to "Login", new_session_path(resource_name), id: "register-form-link" %>
            </div>
            <div class="col-xs-6">
              <%= link_to "Register", new_registration_path(resource_name), id: "register-form-link" %>
            </div>
          </div>
          <hr>
        </div>
        <div class="panel-body">
          <div class="row">
            <div class="col-md-12">
              <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                  <%= devise_error_messages! %>
                  <div class="form-group">
                    <%= f.email_field :email, autofocus: true, tabindex: "1", class: "form-control", placeholder: "Email", value: ""  %>
                  </div>
                  <div class="form-group">
                    <%= f.text_field :user_name, autofocus: true, tabindex: "2", class: "form-control", placeholder: "Username", value: ""  %>
                  </div>

                  <div class="form-group">
                    <%= f.password_field :password, autocomplete: "off", tabindex:"3",  class: "form-control", placeholder: "Password" %>
                  </div>
                  <div class="form-group">
                    <%= f.password_field :password_confirmation, autocomplete: "off", tabindex:"4",  class: "form-control", placeholder: "Password" %>
                  </div>
                  <div class="form-group">
                    <div class="row">
                      <div class="col-sm-6 col-sm-offset-3">
                        <%= f.submit "Sign Up", id:"login-submit", tabindex:"5", class:"form-control btn btn-login" %>
                      </div>
                    </div>
                  </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>