<div class="row">
  <div class="col-md-3">
    <div class="panel panel-primary friends-list">
      <div class="panel-heading">
        <h3 class="panel-title">Friends (<%=@users.size%>)</h3>
      </div>
      <div class="panel-body">
        <ul>
          <% @users.each do |user| %>
              <li><%= link_to "@#{user.user_name}", conversations_path(user_id: user), remote: true, method: :post %></li>
          <% end %>
        </ul>
        <ul class="user-menu">
          <%= render 'shared/top_menu'%>
        </ul>
      </div>
    </div>
  </div>

  <div class="col-md-9">
    <ul id="conversations-list">
      <%= render 'conversations/conversation', conversation: @conversation, user: current_user %>
    </ul>
  </div>
</div>
