<% if @tones.nil?%>
    <h3> This user has no data in the selected date range.</h3>
<% else %>
    <table class="table table-striped">
      <thead>
      <tr>
        <th>Tone Name</th>
        <th>Score</th>
        <th>Category</th>
      </tr>
      </thead>
      <tbody>
        <%@tones['document_tone']['tone_categories'].each do |data| %>
            <% data['tones'].each do |tone_data| %>
                <% if tone_data['score'] > 0.5 %>
                  <tr>
                    <td><%= tone_data['tone_name']%></td>
                    <td><%= tone_data['score']%></td>
                    <td><%= data['category_name']%></td>
                  </tr>
                <% end %>
            <% end %>
        <% end %>
    </table>
<% end %>

